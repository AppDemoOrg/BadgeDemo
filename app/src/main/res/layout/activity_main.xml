<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.abt.badgedemo.MainActivity"
    android:id="@+id/ll_setting"
    android:layout_width="@dimen/dp_110"
    android:layout_height="@dimen/dp_124"
    android:layout_marginTop="@dimen/dp_12"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/img_wrapper"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_110"
            android:background="@drawable/icon_shadow"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@drawable/settings_icon"
                android:onClick="@{() -> model.clickSetting()}" />
            <!-- app:shadowRound="0dp"
                app:shadowSrc="@drawable/settings_icon" -->
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_21"
        android:textColor="@color/C_F8_F8_F8"
        android:layout_marginTop="-11dp"
        android:textSize="@dimen/sp_15"
        android:text="@string/setting"
        android:shadowColor="@color/C_80_00_00_00"
        android:shadowRadius="10"
        android:shadowDx="0"
        android:shadowDy="2"
        android:textStyle="normal"
        android:gravity="center" />

</LinearLayout>


